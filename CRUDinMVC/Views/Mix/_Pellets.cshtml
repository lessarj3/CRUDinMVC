@*@using CathRepoCommon.Models*@
@model IEnumerable<CathRepoCommon.Models.Pellet>

<table class ="table">
    <tr>
        <th class="col4">Mass(g)</th>
        <th class="col4">Diameter(mm)</th>
        <th class="col4">Thickness(mm)</th>
        <th class="col4">Resistance(ohms)</th>
    </tr>
    
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Mass)</td>
            <td>@Html.DisplayFor(modelItem => item.Diameter)</td>
            <td>@Html.DisplayFor(modelItem => item.Thickness)</td>
            <td>@Html.DisplayFor(modelItem => item.Resistance)</td>
        </tr>
    }
</table>

<style>
    .col1 {
        width: 30%;
    }

    .col2 {
        width: 10%;
    }

    .col3 {
        width: 25%;
    }

    .col4 {
        width: 15%;
    }
</style>